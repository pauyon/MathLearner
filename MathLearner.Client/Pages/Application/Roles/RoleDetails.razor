@page "/application/roles/details"
@page "/application/roles/details/{EntityId:int}"
@inherits PageBaseDetails<Role>

<DetailsTemplate PageTitle="@PageTitle" IsPageLoading="@IsPageLoading">
    <MainContent>
        <MudGrid>
            <MudItem xs="12" md="12" lg="12">
                <MudForm>
                    <MudTextField @bind-Value="Entity!.Name" Label="Name" Required="true" />
                    <MudTextField @bind-Value="Entity!.Description" Label="Description" />
                    <div class="d-flex">
                        <MudCheckBox @bind-Checked="Entity.IsActive" Label="Is Active" />
                    </div>
                </MudForm>
            </MudItem>
        </MudGrid>
    </MainContent>
    <ButtonContent>
        <MudStack Row AlignItems="AlignItems.End" Justify="Justify.FlexEnd">
            <MudButton OnClick="@NavigateToGrid" Variant="Variant.Filled" Color="Color.Dark">Cancel</MudButton>
            <MudButton OnClick="@SaveEntity" Variant="Variant.Filled" Color="Color.Primary">Save</MudButton>
        </MudStack>
    </ButtonContent>
</DetailsTemplate>

 @code {

    private void NavigateToGrid()
    {
        NavigationManager!.NavigateTo($"/application/{typeof(Roles).Name.ToLower()}");
    }

    private async Task SaveEntity()
    {
        var result = await Service!.Add(Entity);

        if (result != null)
        {
            NavigateToGrid();
        }
    }
}