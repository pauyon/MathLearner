@inherits TemplateBase

<PageTitle> Math Learner | @PageTitle</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium">
    @if (IsPageLoading)
    {
        <LoadingPage />
    }
    else
    {
        <MudGrid>
            <MudItem Class="mt-6" xs="12" md="12" lg="12">
                <MudText Typo="Typo.h4">@PageTitle</MudText>
            </MudItem>
            @if (MainContent != null)
            {
                <MudItem xs="12" md="12" lg="12">
                        <MudCard>
                            <MudCardContent>
                                @MainContent
                            </MudCardContent>
                        </MudCard>
                </MudItem>
            }
            @if (ButtonContent != null)
            {
                <MudItem xs="12" md="12" lg="12">
                    @ButtonContent
                </MudItem>
            }
        </MudGrid>
    }
</MudContainer>

@code {
    [Parameter]
    public RenderFragment? ButtonContent { get; set; } = null;
}